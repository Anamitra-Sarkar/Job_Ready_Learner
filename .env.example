# ================================================
# JOB READY PLATFORM - ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# ================================================

# -------------------- GENERAL --------------------
NODE_ENV=production
APP_NAME=Job Ready Platform
APP_VERSION=1.0.0

# -------------------- BACKEND --------------------
BACKEND_PORT=8080
PROLOG_STACK_LIMIT=4g
LOG_LEVEL=info  # debug, info, warn, error

# -------------------- CORS --------------------
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost,https://yourdomain.com,https://www.yourdomain.com

# -------------------- RATE LIMITING --------------------
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60
AUTH_RATE_LIMIT=10  # Stricter limit for auth endpoints

# -------------------- FIREBASE (Frontend) --------------------
# These are PUBLIC keys and safe to expose in frontend
# Get these from Firebase Console > Project Settings
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# -------------------- SSL/HTTPS --------------------
SSL_ENABLED=false  # Set to true in production
SSL_CERTIFICATE_PATH=/etc/ssl/certs/your-cert.pem
SSL_CERTIFICATE_KEY_PATH=/etc/ssl/private/your-key.pem
SSL_CA_BUNDLE_PATH=/etc/ssl/certs/ca-bundle.crt

# -------------------- NGINX --------------------
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_CLIENT_MAX_BODY_SIZE=10M

# -------------------- BACKUP --------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Cron format: Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# -------------------- MONITORING --------------------
ENABLE_MONITORING=false  # Set to true to enable Prometheus/Grafana
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=change_me_in_production

# -------------------- DOCKER --------------------
COMPOSE_PROJECT_NAME=job-ready
COMPOSE_FILE=docker-compose.yml

# -------------------- DATABASE --------------------
DB_PATH=/app/data/user_data.db
DB_AUTO_SYNC=true
DB_BACKUP_ENABLED=true

# -------------------- LOGGING --------------------
LOG_TO_FILE=true
LOG_FILE_PATH=/app/logs/backend.log
LOG_MAX_SIZE=10M
LOG_MAX_FILES=3

# -------------------- SECURITY --------------------
# Security headers (set in nginx.conf)
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000
ENABLE_CSP=true

# -------------------- ANALYTICS --------------------
ENABLE_ANALYTICS=false
ANALYTICS_TRACKING_ID=your_tracking_id_here

# -------------------- ERROR REPORTING --------------------
ENABLE_ERROR_REPORTING=false
SENTRY_DSN=your_sentry_dsn_here

# -------------------- PERFORMANCE --------------------
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_MAX_AGE=3600

# -------------------- DEVELOPMENT --------------------
# Only used in development mode
DEV_HOT_RELOAD=false
DEV_DEBUG_MODE=false
DEV_MOCK_DATA=false

# -------------------- PRODUCTION CHECKLIST --------------------
# Before deploying to production:
# ✓ Change all default passwords
# ✓ Set SSL_ENABLED=true
# ✓ Update ALLOWED_ORIGINS with your domain
# ✓ Set ENABLE_MONITORING=true
# ✓ Configure backups
# ✓ Set LOG_LEVEL=info or warn
# ✓ Enable HSTS and CSP
# ✓ Set strong GRAFANA_ADMIN_PASSWORD
