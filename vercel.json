{
  "version": 2,
  "name": "job-ready-learner",
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://YOUR_BACKEND_URL_HERE.onrender.com/api/:path*"
    }
  ],
  "comment": "IMPORTANT: Replace 'YOUR_BACKEND_URL_HERE' with your actual backend URL from Render/Fly.io/Railway before deployment. Example: https://job-ready-backend-abc123.onrender.com",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/config.js",
      "dest": "/config.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
